  let isAnimating = false;
  let messageDirection = true; // true = left to right, false = right to left
  let glowTimeout: ReturnType<typeof setTimeout> | null = null;
  
  function deactivateGlow() {
    const spaceBubbleEl = document.getElementById('space-bubble');
    if (spaceBubbleEl) {
      spaceBubbleEl.classList.remove('touch-active');
