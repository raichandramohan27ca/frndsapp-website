  function sendEncryptedMessage() {
    if (isAnimating) return;
    isAnimating = true;
    
    // Clear any existing glow timeout since animation is starting
    if (glowTimeout) {
      clearTimeout(glowTimeout);
      glowTimeout = null;
    }
    
    const sittingAstro = document.getElementById('astronaut-sitting');
    const hangingAstro = document.getElementById('astronaut-hanging');
    const flyingMessage = document.getElementById('flying-message');
    const securityLock = document.getElementById('security-lock');
    
    if (!sittingAstro || !hangingAstro || !flyingMessage) {
      isAnimating = false;
      return;
    }
    
    // Get flames
    const rocketFlames = sittingAstro.querySelector('.rocket-flames');
    const jetpackFlames = hangingAstro.querySelector('.jetpack-flames');
    
    // Clean up
    flyingMessage.classList.remove('flying-right', 'flying-left');
    sittingAstro.classList.remove('sending', 'receiving');
    hangingAstro.classList.remove('sending', 'receiving');
    if (securityLock) securityLock.classList.remove('unlocked');
    
    // Activate flames
    if (messageDirection) {
      if (rocketFlames) rocketFlames.classList.add('active');
      sittingAstro.classList.add('sending');
    } else {
      if (jetpackFlames) jetpackFlames.classList.add('active');
      hangingAstro.classList.add('sending');
    }
    
    // Send message
    flyingMessage.classList.add(messageDirection ? 'flying-right' : 'flying-left');
    
    // Lock opens when message passes through center (750ms)
    setTimeout(() => {
      if (securityLock) securityLock.classList.add('unlocked');
      
      // Receiver reacts
      if (messageDirection) {
        if (jetpackFlames) jetpackFlames.classList.add('active');
        hangingAstro.classList.add('receiving');
      } else {
        if (rocketFlames) rocketFlames.classList.add('active');
        sittingAstro.classList.add('receiving');
      }
    }, 750);
    
    // Lock closes, clean up (1800ms) and deactivate glow
    setTimeout(() => {
      if (securityLock) securityLock.classList.remove('unlocked');
      flyingMessage.classList.remove('flying-right', 'flying-left');
      
      if (rocketFlames) rocketFlames.classList.remove('active');
      if (jetpackFlames) jetpackFlames.classList.remove('active');
      
      sittingAstro.classList.remove('sending', 'receiving');
      hangingAstro.classList.remove('sending', 'receiving');
      
      // Alternate direction for next click
