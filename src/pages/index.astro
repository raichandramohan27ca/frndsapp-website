---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<Layout title="FRNDSAPP - Find Your People. Verified. | 3D Face Verified | E2EE Everything">
  <!-- Beta Announcement Banner - compact single line -->
  <div class="bg-gradient-to-r from-primary/20 via-accent/20 to-secondary/20 border-b border-white/10 py-1.5 sm:py-2 px-3 sm:px-4 text-center mt-12 sm:mt-14 md:mt-16">
    <p class="text-[11px] sm:text-sm text-white/90 flex items-center justify-center gap-1.5 sm:gap-2">
      <span class="relative flex h-2 w-2">
        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent opacity-75"></span>
        <span class="relative inline-flex rounded-full h-2 w-2 bg-accent"></span>
      </span>
      <span class="font-semibold text-white">Private Beta</span>
      <span class="text-white/40 hidden sm:inline">‚Ä¢</span>
      <span class="hidden sm:inline text-white/70">Invite-only</span>
      <span class="text-white/40">‚Ä¢</span>
      <a href="mailto:info@frndsapp.com" class="text-accent hover:text-white font-medium transition-colors">Join waitlist</a>
    </p>
  </div>

  <!-- Hero Section - adjusted padding since beta banner is above -->
  <section class="relative flex items-center pt-4 sm:pt-6 overflow-x-hidden overflow-y-visible">
    <!-- Background Effects -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-secondary/20 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 left-1/2 w-64 h-64 bg-accent/10 rounded-full blur-3xl"></div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-2 sm:pt-4 md:pt-10 pb-2 md:pb-6 relative z-10">
      <div class="grid lg:grid-cols-2 gap-2 sm:gap-4 lg:gap-8 items-center">
        <!-- Left Content with Two Overlapping Space Bubbles -->
        <div class="text-center lg:text-left relative overflow-visible pt-2 sm:pt-4 md:pt-0 min-h-[380px] sm:min-h-[360px] md:min-h-0">
          <!-- Two Floating Overlapping Bubbles - full size on mobile for clear visibility -->
          <div id="space-bubble" class="relative cursor-pointer transform scale-100 origin-center sm:origin-top-left" onclick="sendEncryptedMessage()">
            
            <!-- Fusion Dots - appear and merge on hover (contained within viewport) -->
            <div class="fusion-dot fusion-dot-1 bg-primary" style="top: 5%; left: 20%;"></div>
            <div class="fusion-dot fusion-dot-2 bg-accent" style="top: 15%; right: 12%;"></div>
            <div class="fusion-dot fusion-dot-3 bg-secondary" style="top: 60%; left: 8%;"></div>
            <div class="fusion-dot fusion-dot-4 bg-cyan-400" style="top: 80%; right: 25%;"></div>
            <div class="fusion-dot fusion-dot-5 bg-purple-400" style="top: 35%; left: 2%;"></div>
            <div class="fusion-dot fusion-dot-6 bg-white" style="top: 50%; right: 5%;"></div>
            <div class="fusion-dot fusion-dot-1 bg-accent" style="top: 90%; left: 30%;"></div>
            <div class="fusion-dot fusion-dot-2 bg-primary" style="top: 25%; left: 45%;"></div>
            <div class="fusion-dot fusion-dot-3 bg-white/80" style="top: 70%; right: 8%;"></div>
            <div class="fusion-dot fusion-dot-4 bg-secondary" style="top: 10%; right: 35%;"></div>
            
            <!-- Bubble 1 - Larger, behind (contained within viewport on mobile) -->
            <div class="bubble-1 absolute -top-10 -left-4 sm:-left-8 w-52 h-52 sm:w-56 sm:h-56 md:w-60 md:h-60 rounded-full bg-gradient-to-br from-primary/10 via-secondary/12 to-accent/10 border-2 border-white/10 backdrop-blur-[2px] animate-float-bubble-1 transition-all duration-500 cursor-pointer">
              <!-- Stars inside bubble 1 -->
              <div class="absolute top-[20%] left-[25%] w-2 h-2 bg-white rounded-full animate-twinkle-1"></div>
              <div class="absolute top-[60%] left-[15%] w-1.5 h-1.5 bg-cyan-400 rounded-full animate-twinkle-2"></div>
              <div class="absolute top-[40%] right-[20%] text-lg animate-float-slow">üöÄ</div>
              <div class="absolute bottom-[25%] left-[30%] text-sm animate-float-slow-reverse">‚ú®</div>
              <!-- Inner glow ring -->
              <div class="absolute inset-3 rounded-full border border-white/5 transition-all duration-500"></div>
            </div>
            
            <!-- Bubble 2 - Smaller, in front, overlapping (contained within viewport on mobile) -->
            <div class="bubble-2 absolute top-24 -right-2 sm:-right-6 md:-right-8 w-44 h-44 sm:w-48 sm:h-48 md:w-48 md:h-48 rounded-full bg-gradient-to-br from-accent/10 via-primary/12 to-secondary/10 border-2 border-white/10 backdrop-blur-[2px] animate-float-bubble-2 transition-all duration-500 z-10 cursor-pointer">
              <!-- Stars inside bubble 2 -->
              <div class="absolute top-[30%] right-[25%] w-1.5 h-1.5 bg-purple-400 rounded-full animate-twinkle-3"></div>
              <div class="absolute bottom-[35%] right-[35%] w-2 h-2 bg-white rounded-full animate-twinkle-1"></div>
              <div class="absolute top-[55%] left-[20%] text-base animate-float-slow">üõ∏</div>
              <div class="absolute top-[25%] left-[35%] text-sm animate-float-slow-reverse">‚≠ê</div>
              <!-- Inner glow ring -->
              <div class="absolute inset-3 rounded-full border border-white/5 transition-all duration-500"></div>
            </div>
            
            <!-- SITTING Astronaut on Rocket - At LEFT edge of first bubble -->
            <div id="astronaut-sitting" class="astronaut-unit absolute z-30" style="left: 0%; top: -8%;">
              <svg class="w-10 h-14 sm:w-12 sm:h-16 md:w-14 md:h-20 drop-shadow-[0_0_10px_rgba(99,102,241,0.5)]" viewBox="0 0 80 130" fill="none">
                <!-- ROCKET -->
                <ellipse cx="40" cy="85" rx="12" ry="30" fill="url(#rocketBody)" stroke="#CBD5E1" stroke-width="1"/>
                <!-- Rocket nose -->
                <path d="M28 58 L40 30 L52 58 Z" fill="#F97316"/>
                <path d="M32 58 L40 38 L48 58 Z" fill="#FBBF24"/>
                <!-- Rocket window -->
                <circle cx="40" cy="72" r="5" fill="#1E3A5F" stroke="#60A5FA" stroke-width="1.5"/>
                <!-- Rocket fins -->
                <path d="M28 100 L18 118 L28 110 Z" fill="#F97316"/>
                <path d="M52 100 L62 118 L52 110 Z" fill="#F97316"/>
                <!-- Rocket flames -->
                <g class="rocket-flames opacity-0">
                  <ellipse cx="40" cy="118" rx="8" ry="10" fill="#FBBF24"/>
                  <ellipse cx="40" cy="122" rx="5" ry="8" fill="#F97316"/>
                  <ellipse cx="40" cy="126" rx="3" ry="5" fill="#EF4444"/>
                </g>
                
                <!-- ASTRONAUT SITTING ON ROCKET -->
                <!-- Helmet -->
                <circle cx="40" cy="20" r="16" fill="white" stroke="#CBD5E1" stroke-width="2"/>
                <!-- Visor - Blue reflective -->
                <ellipse cx="40" cy="22" rx="11" ry="10" fill="url(#visorBlue)"/>
                <ellipse cx="35" cy="18" rx="4" ry="3" fill="rgba(255,255,255,0.4)"/>
                
                <!-- Body sitting -->
                <ellipse cx="40" cy="45" rx="14" ry="12" fill="white" stroke="#CBD5E1" stroke-width="2"/>
                <!-- Chest buttons -->
                <circle cx="36" cy="44" r="2" fill="#6366F1"/>
                <circle cx="44" cy="44" r="2" fill="#06B6D4"/>
                
                <!-- Arms holding rocket -->
                <ellipse cx="24" cy="52" rx="5" ry="8" fill="white" stroke="#CBD5E1" stroke-width="1.5"/>
                <ellipse cx="56" cy="52" rx="5" ry="8" fill="white" stroke="#CBD5E1" stroke-width="1.5"/>
                
                <!-- Legs straddling rocket -->
                <ellipse cx="30" cy="62" rx="6" ry="10" fill="white" stroke="#CBD5E1" stroke-width="1.5" transform="rotate(-15 30 62)"/>
                <ellipse cx="50" cy="62" rx="6" ry="10" fill="white" stroke="#CBD5E1" stroke-width="1.5" transform="rotate(15 50 62)"/>
                <!-- Boots -->
                <ellipse cx="24" cy="70" rx="5" ry="4" fill="#374151"/>
                <ellipse cx="56" cy="70" rx="5" ry="4" fill="#374151"/>
                
                <defs>
                  <linearGradient id="rocketBody" x1="28" y1="55" x2="52" y2="115">
                    <stop offset="0%" stop-color="#F8FAFC"/>
                    <stop offset="100%" stop-color="#E2E8F0"/>
                  </linearGradient>
                  <linearGradient id="visorBlue" x1="29" y1="12" x2="51" y2="32">
                    <stop offset="0%" stop-color="#1E3A5F"/>
                    <stop offset="50%" stop-color="#3B82F6"/>
                    <stop offset="100%" stop-color="#1E40AF"/>
                  </linearGradient>
                </defs>
              </svg>
            </div>
            
            <!-- HANGING Astronaut with Jetpack - At RIGHT edge of second bubble -->
            <div id="astronaut-hanging" class="astronaut-unit absolute z-30 right-[2%] bottom-[8%] sm:right-[2%] sm:bottom-[5%]">
              <svg class="w-10 h-12 sm:w-12 sm:h-14 md:w-14 md:h-16 drop-shadow-[0_0_10px_rgba(236,72,153,0.5)]" viewBox="0 0 80 110" fill="none">
                <!-- ASTRONAUT HANGING/FLOATING with jetpack -->
                <!-- Helmet -->
                <circle cx="40" cy="22" r="18" fill="white" stroke="#F9A8D4" stroke-width="2"/>
                <!-- Visor - Pink reflective -->
                <ellipse cx="40" cy="24" rx="12" ry="11" fill="url(#visorPink)"/>
                <ellipse cx="34" cy="19" rx="4" ry="3" fill="rgba(255,255,255,0.4)"/>
                
                <!-- Body -->
                <ellipse cx="40" cy="52" rx="16" ry="18" fill="white" stroke="#F9A8D4" stroke-width="2"/>
                <!-- Chest panel -->
                <rect x="30" y="44" width="20" height="12" rx="3" fill="#FDF2F8" stroke="#FCE7F3" stroke-width="1"/>
                <circle cx="36" cy="49" r="2" fill="#EC4899"/>
                <circle cx="44" cy="49" r="2" fill="#A855F7"/>
                
                <!-- Jetpack on back -->
                <rect x="56" y="42" width="12" height="22" rx="3" fill="#FCE7F3" stroke="#F9A8D4" stroke-width="1.5"/>
                <rect x="58" y="46" width="3" height="6" rx="1" fill="#EC4899"/>
                <rect x="63" y="46" width="3" height="6" rx="1" fill="#A855F7"/>
                <circle cx="62" cy="58" r="2" fill="#EC4899"/>
                <!-- Jetpack flames -->
                <g class="jetpack-flames opacity-0">
                  <ellipse cx="59" cy="68" rx="3" ry="6" fill="#F472B6"/>
                  <ellipse cx="59" cy="72" rx="2" ry="4" fill="#EC4899"/>
                  <ellipse cx="65" cy="68" rx="3" ry="6" fill="#F472B6"/>
                  <ellipse cx="65" cy="72" rx="2" ry="4" fill="#EC4899"/>
                </g>
                
                <!-- Arms (one reaching out) -->
                <ellipse cx="20" cy="48" rx="6" ry="10" fill="white" stroke="#F9A8D4" stroke-width="1.5" transform="rotate(-20 20 48)"/>
                <circle cx="14" cy="42" r="5" fill="white" stroke="#F9A8D4" stroke-width="1.5"/>
                <ellipse cx="58" cy="54" rx="5" ry="8" fill="white" stroke="#F9A8D4" stroke-width="1.5" transform="rotate(15 58 54)"/>
                <circle cx="62" cy="60" r="4" fill="white" stroke="#F9A8D4" stroke-width="1.5"/>
                
                <!-- Legs dangling -->
                <ellipse cx="32" cy="76" rx="7" ry="12" fill="white" stroke="#F9A8D4" stroke-width="1.5" transform="rotate(-10 32 76)"/>
                <ellipse cx="48" cy="78" rx="7" ry="12" fill="white" stroke="#F9A8D4" stroke-width="1.5" transform="rotate(15 48 78)"/>
                <!-- Boots -->
                <ellipse cx="28" cy="88" rx="6" ry="4" fill="#374151"/>
                <ellipse cx="54" cy="90" rx="6" ry="4" fill="#374151"/>
                
                <defs>
                  <linearGradient id="visorPink" x1="28" y1="13" x2="52" y2="35">
                    <stop offset="0%" stop-color="#831843"/>
                    <stop offset="50%" stop-color="#EC4899"/>
                    <stop offset="100%" stop-color="#A855F7"/>
                  </linearGradient>
                </defs>
              </svg>
            </div>
            
            <!-- Flying E2EE Message - envelope with shield between astronauts -->
            <div id="flying-message" class="absolute z-50 opacity-0 pointer-events-none" style="left: 0; top: 50%;">
              <div class="relative flex items-center gap-1.5 bg-gradient-to-r from-primary via-secondary to-accent px-3 py-1.5 rounded-xl shadow-xl shadow-primary/50 border border-white/30">
                <!-- Envelope with lock icon -->
                <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="none">
                  <rect x="2" y="6" width="20" height="14" rx="2" fill="currentColor" opacity="0.9"/>
                  <path d="M2 8l10 6 10-6" stroke="#06B6D4" stroke-width="1.5" stroke-linecap="round"/>
                  <circle cx="12" cy="15" r="2" fill="#06B6D4"/>
                  <rect x="11" y="15" width="2" height="2" fill="#06B6D4"/>
                </svg>
                <span class="text-xs text-white font-bold tracking-wide">E2EE</span>
                <!-- Sparkle effect -->
                <div class="absolute -top-1 -right-1 w-3 h-3 text-yellow-300 animate-ping">‚ú¶</div>
              </div>
            </div>
            
            <!-- Small floating stars - now visible on mobile too (positioned to avoid overflow) -->
            <div class="absolute left-0 top-28 text-sm animate-twinkle-1 text-yellow-300">‚≠ê</div>
            <div class="absolute left-2 top-14 text-base animate-twinkle-2 text-cyan-400 sm:-left-4">‚ú¶</div>
            <div class="absolute right-0 bottom-32 text-sm animate-twinkle-3 text-pink-300">‚≠ê</div>
            <div class="absolute right-2 bottom-16 text-base animate-twinkle-1 text-purple-400 sm:-right-4">‚ú¶</div>
            
            
            <!-- Content - Zoomed on mobile, properly spaced on desktop -->
            <div class="relative z-20 py-5 sm:py-5 px-5 sm:px-5 mt-4 sm:mt-4 scale-105 sm:scale-100 origin-top-left">
              <!-- App Category Badge - shifts right on large screens -->
              <div class="inline-flex items-center gap-2 px-3 sm:px-3 py-1.5 sm:py-1.5 rounded-full bg-white/5 border border-white/10 mb-4 sm:mb-4 lg:ml-32 xl:ml-40">
                <span class="text-lg sm:text-lg">üí¨</span>
                <span class="text-base sm:text-base text-text-secondary">Next-Gen Messaging</span>
              </div>
              
              <h1 class="text-4xl sm:text-4xl lg:text-5xl font-display font-bold leading-tight mb-4 sm:mb-4">
                <span class="gradient-text">Connect in Space</span>
                <!-- Secure Message Shield Icon -->
                <span id="security-lock" class="inline-block ml-1 relative align-middle">
                  <svg class="w-8 h-8 sm:w-9 sm:h-9 lg:w-10 lg:h-10 inline-block" viewBox="0 0 24 24" fill="none">
                    <!-- Shield shape -->
                    <path d="M12 2L4 6v6c0 5.25 3.4 10.15 8 11.45 4.6-1.3 8-6.2 8-11.45V6l-8-4z" fill="url(#shieldGrad)" stroke="#A78BFA" stroke-width="1"/>
                    <!-- Message envelope inside shield -->
                    <rect x="7" y="9" width="10" height="7" rx="1" fill="#1e1b4b" stroke="#A78BFA" stroke-width="0.8"/>
                    <path d="M7 10l5 3 5-3" stroke="#06B6D4" stroke-width="1" stroke-linecap="round"/>
                    <!-- Lock on envelope -->
                    <circle cx="12" cy="14" r="1.5" fill="#06B6D4"/>
                    <defs>
                      <linearGradient id="shieldGrad" x1="4" y1="2" x2="20" y2="20">
                        <stop offset="0%" stop-color="#6366F1"/>
                        <stop offset="100%" stop-color="#8B5CF6"/>
                      </linearGradient>
                    </defs>
                  </svg>
                  <div id="lock-glow" class="absolute inset-0 opacity-0 pointer-events-none">
                    <div class="absolute inset-0 bg-gradient-to-r from-primary/50 via-accent/50 to-secondary/50 blur-xl rounded-full"></div>
                  </div>
                </span>
              </h1>
              
              <p class="text-base sm:text-base lg:text-lg text-white/90 font-medium mb-2 sm:mb-2">
                Space has no boundaries. Neither do possibilities.
              </p>
              <p class="text-base sm:text-base text-text-secondary mb-4 sm:mb-4">
                Join Spaces for dating, business, travel ‚Äî anything.
              </p>
              
              <!-- Create your own -->
              <p class="text-accent text-sm sm:text-sm mb-4 sm:mb-4 font-medium">
                Can't find the right Space? <span class="underline decoration-dotted underline-offset-4">Create your own!</span> ‚ú®
              </p>
              
              <!-- App Store Buttons -->
              <div class="flex flex-row gap-3 mb-4 sm:mb-4">
                <a href="#" class="btn-primary flex items-center justify-center gap-2 text-sm sm:text-sm px-4 sm:px-4 py-2.5 sm:py-2.5 relative z-30" onclick="event.stopPropagation()">
                  <svg class="w-5 h-5 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                  </svg>
                  App Store
                </a>
                <a href="#" class="btn-secondary flex items-center justify-center gap-2 text-sm sm:text-sm px-4 sm:px-4 py-2.5 sm:py-2.5 relative z-30" onclick="event.stopPropagation()">
                  <svg class="w-5 h-5 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M3.609 1.814L13.792 12 3.61 22.186a.996.996 0 0 1-.61-.92V2.734a1 1 0 0 1 .609-.92zm10.89 10.893l2.302 2.302-10.937 6.333 8.635-8.635zm3.199-3.198l2.807 1.626a1 1 0 0 1 0 1.73l-2.808 1.626L15.206 12l2.492-2.491zM5.864 2.658L16.8 8.99l-2.302 2.302-8.634-8.634z"/>
                  </svg>
                  Google Play
                </a>
              </div>
              
              <p class="text-text-secondary text-sm sm:text-sm">Every user 3D verified. Every message E2EE.</p>
            </div>
          </div>
        </div>
        
        <!-- Right: Animated Phone Mockup - scroll down to see on mobile -->
        <div id="phone-mockup-section" class="relative flex flex-col items-center justify-center lg:justify-end mt-0 lg:mt-0">
          <!-- Scroll hint on mobile - just animated hand, resets animation on click -->
          <a href="#phone-mockup-section" class="lg:hidden text-center mb-1 cursor-pointer" onclick="event.preventDefault(); document.getElementById('phone-mockup-section').scrollIntoView({behavior: 'smooth', block: 'start'}); if(window.resetPhoneAnimation) window.resetPhoneAnimation();">
            <p class="text-xl animate-bounce">üëá</p>
          </a>
          <div class="phone-frame w-[260px] sm:w-72 md:w-[320px] animate-float glow">
            <div class="phone-screen aspect-[9/19] relative">
              <!-- Phone Notch -->
              <div class="phone-notch absolute top-0 left-1/2 -translate-x-1/2 z-20"></div>
              
              <!-- Animated Content Container -->
              <div id="phone-animation" class="absolute inset-0 pt-6 overflow-hidden">
                
                <!-- STEP 1: Browse Spaces with Footer Tabs -->
                <div class="animation-frame active" data-step="1">
                  <div class="p-3 pb-14 h-full flex flex-col">
                    <!-- Catchy Create Space Banner -->
                    <div class="glass-card p-2.5 mb-2 border border-primary/30 bg-gradient-to-r from-primary/10 to-accent/10 relative overflow-hidden">
                      <div class="absolute top-0 right-0 w-12 h-12 opacity-20">
                        <span class="text-3xl">üåå</span>
                      </div>
                      <p class="text-[10px] text-text-secondary">Can't find your Space?</p>
                      <div class="flex items-center justify-between">
